@inject Microsoft.AspNetCore.Identity.UserManager<TestNewLine.Data.Models.User> mana
@model CreatePostBlogDto

@{
    ViewData["Title"] = "Add new Post";
    Layout = null;
}

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>


<form asp-action="Create" class="ajaxForm" tname="#kt_datatable" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="AuthorId" hidden value="@ViewBag.auther.Id" class="form-control" />
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
    
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="SubTittle" class="control-label"></label>
                <input asp-for="SubTittle" class="form-control" />
                <span asp-validation-for="SubTittle" class="text-danger"></span>
            </div>
        </div>   
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">

        <label asp-for="Body" for="example-text-input" class="col-2 col-form-label"></label>
        <div id="summernote"><textarea asp-for="Body" id="ta-1" cols="30" rows="30"></textarea></div>
        <input asp-for="Body" id="BodyInput" type="hidden" class="form-control" />
        </div>

    </div>

    <div class="form-group">
        <input type="submit" onclick="create()" value="Add" class="btn btn-primary" />
        <a data-dismiss="modal" aria-label="Close" class="btn btn-danger">Cancel</a>
    </div>
</form>


<script>
    PageLoadActions();
</script>

